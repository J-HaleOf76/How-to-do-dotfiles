[user]
    name = Selwyn
    email = talk@selwyn.cc
    signingkey = ~/.ssh/id_ed25519.pub
[alias]
    ad = add .
    br = branch
    ci = commit
    co = checkout
    lo = log --oneline -n 15
    st = status
    up = pull --rebase
    re = restore
[core]
    editor = flatpak run --file-forwarding re.sonny.Commit @@
    excludesfile = ~/.config/.global-gitignore
[commit]
    gpgsign = true
[diff]
    external = difft
[gpg]
    format = ssh
[init]
    defaultBranch = main
[push]
    default = current
[rebase]
    autoStash = true

[includeIf "gitdir:~/codeground/a-voorhoede/a-forks/"]
    path = ~/codeground/a-voorhoede/.gitconfig
